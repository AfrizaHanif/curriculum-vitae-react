<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Force trailing slash for directories to ensure canonical URLs.
  # If a request is for an existing directory but doesn't have a trailing slash,
  # redirect to the URL with the slash. e.g., /about -> /about/
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^(.*[^/])$ %{REQUEST_URI}/ [L,R=301]

  # Handle 404 errors using the Next.js 404 page
  ErrorDocument 404 /404.html
</IfModule>

# Optimize caching for static assets
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

# Prevent directory listing (fixes 403 if a folder exists without index.html)
Options -Indexes